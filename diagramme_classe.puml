@startuml
skinparam class {
    BackgroundColor #E1D5E7
    BorderColor #5D4037
    HeaderBackgroundColor #D1C4E9
    ArrowColor #000000
    AttributeFontColor #000000
    AttributeFontSize 13
}

skinparam linetype ortho
hide circle

class User {
    +int id
    +string name
    +string email
    +string password
    +string role
    +datetime created_at
}

class Contact {
    +int id
    +string nom
    +string prenom
    +string email
    +string telephone
    +string photo
    +datetime created_at
}

class Ville {
    +int id
    +string nom
    +datetime created_at
}

' Pivot Table (Hidden conceptually or shown as Association Class)
class "Ville_Contact" as Pivot {
  +ville_id
  +contact_id
}

User "1" --> "0..*" Contact : "creates/manages"
Contact "0..*" -- "0..*" Ville : "operates in"
(Contact, Ville) .. Pivot

@enduml
